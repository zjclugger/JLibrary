<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_orange" />
            <stroke android:width="1dp" android:color="@color/primary_orange" />
            <corners
                android:bottomLeftRadius="@dimen/radius_larger"
                android:bottomRightRadius="@dimen/radius_larger"
                android:topLeftRadius="@dimen/radius_larger"
                android:topRightRadius="@dimen/radius_larger" />
        </shape>
    </item>
    <!--<item android:state_selected="true" android:drawable="@mipmap/ic_radio_button_checked"></item>-->
    <!--<item android:state_pressed="true" android:drawable="@mipmap/ic_radio_button_checked"></item>-->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/primary_orange" />
            <corners
                android:bottomLeftRadius="@dimen/radius_larger"
                android:bottomRightRadius="@dimen/radius_larger"
                android:topLeftRadius="@dimen/radius_larger"
                android:topRightRadius="@dimen/radius_larger" />
        </shape>
    </item>
</selector>