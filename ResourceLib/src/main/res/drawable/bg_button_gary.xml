<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/darker_gray"/>
            <stroke android:width="1dp" android:color="@color/darker_gray"/>
            <corners android:radius="@dimen/radius_normal"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/light_gray"/>
            <stroke android:width="1dp" android:color="@color/light_gray"/>
            <corners android:radius="@dimen/radius_normal"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/primary_gray"/>
            <stroke android:width="1dp" android:color="@color/primary_gray"/>
            <corners android:radius="@dimen/radius_normal"/>
        </shape>
    </item>

</selector>