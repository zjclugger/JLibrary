<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/nav_layout"
        layout="@layout/detail_title" />

    <TextView
        android:id="@+id/line_1"
        style="@style/Line"
        android:layout_below="@id/nav_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="@dimen/margin_normal">

        <TextView
            android:id="@+id/label_chart_pie"
            style="@style/ReportMainItem"
            android:background="@mipmap/bg_report_lightest_blue"
            android:text="饼状图" />

        <TextView
            android:id="@+id/label_chart_line"
            style="@style/ReportMainItem"
            android:background="@mipmap/bg_report_orange"
            android:text="折线图" />

        <TextView
            android:id="@+id/label_chart_bar"
            style="@style/ReportMainItem"
            android:background="@mipmap/bg_report_lighter_blue"
            android:text="柱状图" />
    </LinearLayout>

</RelativeLayout>