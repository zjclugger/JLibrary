<resources>

    <style name="loadingStyle" parent="FullScreen">
        <item name="android:background">@mipmap/bg_loading</item>
    </style>

    <style name="OrderDetailItemStyle3" parent="OrderDetailItemStyle2">
        <item name="label_text_color">@color/text_gray</item>
        <item name="value_text_color">@color/text_gray</item>
        <item name="value_text_size">@dimen/text_size_small</item>
        <item name="android:layout_marginLeft">@dimen/margin_smallest</item>
        <item name="android:layout_marginRight">@dimen/margin_smallest</item>
    </style>

    <style name="Small.ImageTextViewStyle" parent="ImageTextViewStyle">
        <item name="android:paddingTop">@dimen/margin_smallest</item>
        <item name="android:paddingBottom">@dimen/margin_smallest</item>
        <item name="itv_image_width">30dp</item>
        <item name="itv_image_height">30dp</item>
    </style>

    <style name="OriginalDetailItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark_black</item>
    </style>

    <style name="OriginalDetailItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/bg_white</item>
        <item name="android:paddingLeft">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_normal</item>
        <item name="android:paddingBottom">@dimen/margin_normal</item>
    </style>

    <style name="Line.Small" parent="Line">
        <item name="android:layout_height">5dp</item>
    </style>

    <style name="EditStyle">
        <!-- <item name="android:background">@drawable/bg_corners_border_gary</item>-->
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:paddingLeft">@dimen/margin_smallest</item>
        <item name="android:paddingRight">@dimen/margin_smallest</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/dark_black</item>
    </style>

    <style name="GoodsEditStyle">
        <item name="android:paddingLeft">@dimen/margin_small</item>
        <item name="android:paddingRight">@dimen/margin_small</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="label_text_size">@dimen/text_size_normal</item>
        <item name="value_text_visibility">GONE</item>
        <item name="middle_text_visibility">GONE</item>
        <item name="edit_text_weight">1</item>
        <item name="edit_text_background">@drawable/bg_edit_text_black</item>
        <item name="edit_text_size">@dimen/text_size_normal</item>
        <item name="edit_text_corner_radius">2dp</item>
        <item name="edit_text_border_width">0.5dp</item>
        <item name="edit_text_border_color">@color/light_gray</item>
        <item name="label_text_width">80dp</item>
        <item name="android:layout_marginTop">@dimen/margin_smallest</item>
        <item name="android:layout_marginBottom">@dimen/margin_smallest</item>
    </style>

    <style name="IconTextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_selected</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>
</resources>
