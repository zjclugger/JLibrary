    <style name="RatingBarStyle" parent="Widget.MaterialRatingBar.RatingBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:layout_marginRight">@dimen/margin_smallest</item>
        <item name="mrb_progressTint">@color/primary_orange</item>
        <item name="mrb_secondaryProgressTint">@color/primary_orange</item>
    </style>

    <style name="ChatHeadStyle">
        <item name="android:layout_width">40dp</item>
