<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择默认支付方式"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_large" />

        <ImageView
            android:id="@+id/title_right_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_normal"
            android:src="@mipmap/ic_close_gray" />
    </RelativeLayout>

    <TextView style="@style/Line" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pay_mode_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:background="@drawable/bg_button_border_blue"
        android:paddingLeft="@dimen/margin_larger"
        android:paddingTop="@dimen/margin_small"
        android:paddingRight="@dimen/margin_larger"
        android:paddingBottom="@dimen/margin_small"
        android:text="添加银行卡"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_normal" />

</LinearLayout>

