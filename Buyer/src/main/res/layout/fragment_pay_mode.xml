<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/nav_title"
        layout="@layout/detail_title" />
    <TextView style="@style/Line" />

    <com.zjclugger.lib.view.ExtendLabelValueView
        android:id="@+id/elvv_default_pay"
        style="@style/PageItemListStyle"
        app:label_text="默认支付方式"
        app:left_image_src="@mipmap/ic_order_selected"
        app:value_text="银行卡" />
    <TextView style="@style/Line" />

    <com.zjclugger.lib.view.ExtendLabelValueView
        android:id="@+id/elvv_bank_card"
        style="@style/PageItemListStyle"
        app:label_text="银行卡(1)"
        app:left_image_src="@mipmap/ic_order_selected"
        app:value_text="招商银行储蓄卡(8888)" />
    <TextView style="@style/Line" />

    <com.zjclugger.lib.view.ExtendLabelValueView
        android:id="@+id/elvv_weixin_pay"
        style="@style/PageItemListStyle"
        app:label_text="微信"
        app:left_image_src="@mipmap/ic_order_selected"
        app:value_text="已绑定" />
    <TextView style="@style/Line" />

    <com.zjclugger.lib.view.ExtendLabelValueView
        android:id="@+id/elvv_alipay"
        style="@style/PageItemListStyle"
        app:label_text="支付宝"
        app:left_image_src="@mipmap/ic_order_selected"
        app:value_text="未绑定" />
    <TextView style="@style/Line" />

</LinearLayout>

