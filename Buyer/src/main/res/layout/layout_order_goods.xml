<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_larger"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/goods_image"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_picture_default" />

        <RelativeLayout
            android:id="@+id/goods_data"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_smallest"
            android:padding="@dimen/margin_small"
            android:visibility="visible">

            <TextView
                android:id="@+id/goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="五月天2050年演唱会 武汉站"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/goods_pro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/goods_name"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="商品属性商品属性商品属性商品属性商品属性属性商品属性属性商品属性属性商品属性属性商品属性商品属性商品属性商品属性"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:lines="1"
                android:text="￥100000.00"
                android:textColor="@color/text_selected"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/price_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/goods_price"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/goods_unit_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥330"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/goods_buy_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/margin_small"
                    android:text="x1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>


            <TextView
                android:id="@+id/evaluate_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:background="@drawable/bg_button_border_red"
                android:paddingLeft="@dimen/margin_small"
                android:paddingTop="@dimen/margin_smallest"
                android:paddingRight="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_smallest"
                android:text="评价"
                android:textSize="@dimen/text_size_small"
                android:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/function_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="@dimen/margin_small"
        android:visibility="visible">

        <TextView
            android:id="@+id/detail_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/bg_button_border_red"
            android:paddingLeft="@dimen/margin_small"
            android:paddingTop="@dimen/margin_smallest"
            android:paddingRight="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_smallest"
            android:text="查看详情"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/item_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/bg_button_border_red"
            android:paddingLeft="@dimen/margin_small"
            android:paddingTop="@dimen/margin_smallest"
            android:paddingRight="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_smallest"
            android:text="提醒发货"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>
</LinearLayout>