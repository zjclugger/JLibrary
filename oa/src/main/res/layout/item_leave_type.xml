<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/bg_white"
    android:layout_marginBottom="30dp"
    android:padding="@dimen/margin_small">

    <TextView
        android:id="@+id/leave_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:drawableLeft="@mipmap/ic_circle_blue_small"
        android:text="假期" />

    <TextView
        android:id="@+id/leave_type_line"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="@dimen/margin_normal"
        android:background="@color/dark_gray" />

    <ImageView
        android:id="@+id/right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_arrow_right" />

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/leave_type_line"
        android:layout_toLeftOf="@id/right_arrow"
        android:orientation="vertical">

        <TextView
            android:id="@+id/leave_type_remain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            android:text="剩余0小时" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/leave_type_grant"
            android:text="手动发放" />
    </LinearLayout>
</RelativeLayout>