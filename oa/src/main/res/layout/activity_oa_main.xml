<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/oa_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@drawable/selector_light_red"
        app:itemTextColor="@drawable/selector_light_red"
        app:menu="@menu/menu_navigation_oa" />

    <TextView
        android:id="@+id/line_navigation"
        style="@style/Line"
        android:layout_above="@id/oa_navigation" />

    <RelativeLayout
        android:id="@+id/content_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/line_navigation" />

</RelativeLayout>
