<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:padding="@dimen/margin_small">

    <com.zjclugger.lib.view.LabelValueView
        android:paddingLeft="@dimen/margin_smallest"
        android:paddingRight="@dimen/margin_smallest"
        android:id="@+id/lvv_attendance_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="ltr"
        app:label_text="Label"
        app:label_text_color="@color/black"
        app:label_text_size="@dimen/text_size_small"
        app:value_text="Value"
        app:value_text_color="@color/primary_gray"
        app:value_text_gravity="right"
        app:value_text_size="@dimen/text_size_small" />
</RelativeLayout>