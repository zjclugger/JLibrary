<resources>

    <style name="WorkbenchItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_smallest</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:layout_marginRight">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_larger</item>
    </style>

    <style name="RuleItemStyle">
        <item name="android:background">@color/bg_white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="label_text_gravity">left</item>
        <item name="value_text_gravity">right</item>
        <item name="label_text_color">@color/black</item>
        <item name="value_text_color">@color/light_black</item>
        <item name="label_text_size">@dimen/text_size_small</item>
        <item name="value_text_size">@dimen/text_size_small</item>
    </style>

    <style name="Leave.ExtendLabelViewTextStyle" parent="ExtendLabelViewTextStyle">
        <item name="label_text_size">14sp</item>
        <item name="value_text_size">14sp</item>
        <item name="android:paddingTop">@dimen/margin_smallest</item>
        <item name="android:paddingBottom">@dimen/margin_smallest</item>
    </style>

    <style name="LeftImage.LeaveExtendLabelViewTextStyle" parent="Leave.ExtendLabelViewTextStyle">
        <item name="left_image_src">@mipmap/ic_start_red</item>
        <item name="android:paddingRight">@dimen/margin_smallest</item>
    </style>

    <style name="RightImage.LeaveExtendLabelViewTextStyle" parent="Leave.ExtendLabelViewTextStyle">
        <item name="right_image_src">@mipmap/ic_start_red</item>
        <item name="android:paddingRight">@dimen/margin_smallest</item>
    </style>

    <style name="Image.LeaveExtendLabelViewTextStyle" parent="Leave.ExtendLabelViewTextStyle">
        <item name="left_image_src">@mipmap/ic_start_red</item>
        <item name="right_image_src">@mipmap/ic_delete_gray</item>
    </style>

    <style name="Small.CircleStyle" parent="CircleStyle">
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_width">10dp</item>
    </style>

    <style name="test.CircleStyle" parent="CircleStyle">
        <item name="civ_background_stroke_width">10dp</item>
        <item name="civ_background_color">@color/transparent</item>
        <item name="civ_background_stroke_color">@color/transparent</item>
        <item name="civ_circle_background_color">@color/transparent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_width">10dp</item>
    </style>

    <style name="ItemApproveStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height_approve</item>
        <item name="android:background">@color/bg_white</item>
        <item name="android:paddingLeft">@dimen/margin_small</item>
        <item name="android:paddingRight">@dimen/margin_small</item>
    </style>

    <style name="TextApproveStyle">
        <item name="android:layout_margin">@dimen/margin_smallest</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="value_text_color">@color/dark_gray</item>
        <item name="label_text_color">@color/black</item>
        <item name="value_text_size">14sp</item>
        <item name="label_text_size">14sp</item>
    </style>

    <style name="TextLeaveRecordStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="label_text_color">@color/gray</item>
        <item name="value_text_color">@color/gray</item>
        <item name="label_text_gravity">left</item>
        <item name="value_text_gravity">left</item>
        <item name="label_text_size">@dimen/text_size_small</item>
        <item name="value_text_size">@dimen/text_size_small</item>
    </style>

    <style name="TextLeaveDetailStyle">
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="label_text_color">@color/gray</item>
        <item name="value_text_color">@color/black</item>
        <item name="label_text_gravity">left</item>
        <item name="value_text_gravity">left</item>
        <item name="label_text_width">75dp</item>
        <item name="label_text_size">@dimen/text_size_small</item>
        <item name="value_text_size">@dimen/text_size_small</item>
    </style>

    <style name="CITVApproveStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="citv_civ_text_color">@color/white</item>
        <item name="citv_civ_text_size">@dimen/text_size_small</item>
        <item name="citv_text_color">@color/gray</item>
        <item name="citv_text_size">@dimen/text_size_small</item>
    </style>

    <style name="CircleImage.CITVApproveStyle" parent="CITVApproveStyle">
        <item name="citv_add_visibility">GONE</item>
        <item name="citv_delete_visibility">GONE</item>
        <item name="citv_text_visibility">GONE</item>
    </style>

    <style name="ItemAttendanceStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="citv_civ_text_color">@color/white</item>
        <item name="citv_civ_text_size">@dimen/text_size_small</item>
        <item name="citv_text_color">@color/black</item>
        <item name="citv_text_size">@dimen/text_size_small</item>
        <item name="citv_background">@drawable/shape_corners_primary</item>
        <item name="citv_delete_visibility">GONE</item>
        <item name="citv_add_visibility">GONE</item>
        <item name="citv_padding">@dimen/margin_smallest</item>
    </style>

    <style name="LeaveLabelValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="label_text_size">@dimen/text_size_small</item>
        <item name="value_text_size">@dimen/text_size_small</item>
    </style>

    <style name="HeaderDetailStyle">
        <item name="label_text_size">@dimen/text_size_small</item>
        <item name="value_text_size">@dimen/text_size_small</item>
        <item name="label_text_color">@color/black</item>
        <item name="value_text_color">@color/gray</item>
        <item name="label_text_gravity">left</item>
        <item name="value_text_gravity">left</item>
    </style>

    <style name="ContactsCheckboxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@drawable/bg_checkbox</item>
        <item name="android:paddingLeft">@dimen/margin_smallest</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="PaddingLeftSmallest">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/margin_smallest</item>
    </style>

    <style name="SignLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/margin_smallest</item>
    </style>

    <style name="AttendanceGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="label_text_size">@dimen/text_size_small</item>
        <item name="value_text_size">@dimen/text_size_small</item>
        <item name="android:padding">@dimen/margin_smallest</item>
        <item name="value_text_color">@color/gray</item>
    </style>

    <style name="RadioButtonNavStyle">
        <item name="android:button">@null</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="StatisticsItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="label_text_color">@color/black</item>
        <item name="label_text_gravity">center</item>
        <item name="label_text_size">@dimen/text_size_larger</item>
        <item name="value_text_color">@color/dark_gray</item>
        <item name="value_text_gravity">center</item>
        <item name="value_text_size">@dimen/margin_small</item>
    </style>

    <style name="StatisticsDialProgressViewStyle">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
    </style>

    <style name="Report.LabelValueViewStyle" parent="HLabelValueViewStyle">
        <item name="label_text_color">@color/black</item>
        <item name="value_text_color">@color/darker_gray</item>
        <item name="value_text_gravity">right</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingLeft">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_normal</item>
    </style>

    <style name="Contacts.LabelValueViewStyle" parent="VLabelValueViewStyle">
        <item name="label_text_color">@color/darker_gray</item>
        <item name="value_text_color">@color/black</item>
        <item name="label_text_size">@dimen/text_size_small</item>
        <item name="value_text_size">@dimen/text_size_small</item>
        <item name="android:gravity">left</item>
        <item name="label_text_gravity">left</item>
        <item name="value_text_gravity">left</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingLeft">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_normal</item>
    </style>
</resources>
