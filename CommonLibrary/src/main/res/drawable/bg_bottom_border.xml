<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 边框颜色值 -->
    <item>
        <shape>
            <solid android:color="@color/divider_line" />
        </shape>
    </item>

    <!--这个是按钮边框设置为四周 并且宽度为1-->
    <item
        android:bottom="1dp"
       >
        <shape>
            <!--这个是背景颜色-->
            <solid android:color="#ffffff" />
            <!--这个是按钮中的字体与按钮内的四周边距-->
            <padding
                android:bottom="@dimen/margin_smallest"
                android:left="@dimen/margin_smallest"
                android:right="@dimen/margin_smallest"
                android:top="@dimen/margin_smallest" />
        </shape>
    </item>
</layer-list>