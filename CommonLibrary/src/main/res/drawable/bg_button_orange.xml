<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/btn_orange_pressed"/>
            <stroke android:width="1dp" android:color="@color/btn_orange_pressed_edge"/>
            <corners android:radius="@dimen/radius_normal"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/btn_disable"/>
            <stroke android:width="1dp" android:color="@color/btn_disable_edge"/>
            <corners android:radius="@dimen/radius_normal"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/btn_orange_normal"/>
            <stroke android:width="1dp" android:color="@color/btn_orange_normal_edge"/>
            <corners android:radius="@dimen/radius_normal"/>
        </shape>
    </item>

</selector>