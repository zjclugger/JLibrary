<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/elvv_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/padding_smallest">

    <ImageView
        android:id="@+id/elvv_image_left"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/elvv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_normal" />

    <TextView
        android:id="@+id/elvv_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_normal"
        android:visibility="gone" />

    <TextView
        android:id="@+id/elvv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_normal"
        android:visibility="gone" />

    <EditText
        android:id="@+id/elvv_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_smallest"
        android:layout_weight="1"
        android:padding="@dimen/margin_smallest"
        android:paddingLeft="@dimen/margin_smallest"
        android:paddingRight="@dimen/margin_smallest"
        android:textColor="@color/dark_black"
        android:textSize="@dimen/text_size_normal" />

    <ImageView
        android:id="@+id/elvv_image_right"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="@dimen/margin_smallest"
        android:visibility="gone" />
</LinearLayout>