<resources>
    <!-- Base application theme. -->
    <style name="AppCompatTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/dark_gray</item>
        <item name="android:textColorHint">@color/dark_gray</item>
        <!-- Customize theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="BaseAppTheme" parent="AppCompatTheme">
        <!-- search view -->
        <item name="autoCompleteTextViewStyle">@style/AppAutoCompleteTextView</item>
    </style>

    <!--修改searchView 样式 ++++++++开始+++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
    <style name="TextInputErrorStyle" parent="Base.TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/red</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="AppAutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/AutoCompleteTextAppearance</item>
    </style>

    <style name="AutoCompleteTextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColorHighlight">@color/yellow</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!--修改searchView 样式 ++++++++结束+++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->

    <style name="ToastTextStyle">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogTextStyle">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/dark_white</item>
    </style>

    <style name="FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--android:theme="@android:style/Theme.NoTitleBar.Fullscreen"-->
    <style name="Layout"></style>

    <style name="Layout.padding">
        <item name="android:paddingBottom">@dimen/vertical_padding</item>
        <item name="android:paddingLeft">@dimen/horizontal_padding</item>
        <item name="android:paddingRight">@dimen/horizontal_padding</item>
        <item name="android:paddingTop">@dimen/vertical_padding</item>
