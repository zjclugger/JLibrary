<resources>
    <!-- 自定义View的样式 -->
    <style name="ImageTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="itv_text_size">@dimen/text_size_small</item>
        <item name="itv_text_color">@color/gray</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

    <style name="LabelValueStyle">
        <item name="label_text_size">@dimen/text_size_normal</item>
        <item name="value_text_size">@dimen/text_size_normal</item>
        <item name="label_text_color">@color/black</item>
        <item name="value_text_color">@color/black</item>
    </style>

    <style name="ExtendLabelValueStyle">
        <item name="label_text_size">@dimen/text_size_normal</item>
        <item name="value_text_size">@dimen/text_size_normal</item>
        <item name="middle_text_size">@dimen/text_size_normal</item>
        <item name="label_text_color">@color/black</item>
        <item name="value_text_color">@color/black</item>
        <item name="middle_text_color">@color/black</item>
    </style>

    <style name="LoginEditStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="label_text_size">@dimen/text_size_normal</item>
        <item name="label_text_color">@color/gray</item>
        <item name="value_text_visibility">GONE</item>
        <item name="middle_text_visibility">GONE</item>
        <item name="edit_text_weight">1</item>
        <item name="edit_text_background">@drawable/bg_edit_text_black</item>
        <item name="edit_text_size">@dimen/text_size_normal</item>
        <item name="edit_text_corner_radius">2dp</item>
        <item name="edit_text_border_width">0.5dp</item>
        <item name="edit_text_border_color">@color/transparent</item>
    </style>

    <style name="Dialog.Animation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_translate_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_translate_out</item>
    </style>

    <style name="SkuStyle.CustomDialog" parent="CustomDialog">
        <item name="android:windowAnimationStyle">@style/Dialog.Animation</item>
    </style>

    <!-- old -->

    <style name="HLabelValueViewStyle">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="label_text_size">14sp</item>
        <item name="value_text_size">14sp</item>
    </style>

    <style name="VLabelValueViewStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="label_text_gravity">center</item>
        <item name="value_text_gravity">center</item>
        <item name="label_text_size">14sp</item>
        <item name="value_text_size">14sp</item>
    </style>

    <style name="hr.LabelValueViewStyle" parent="VLabelValueViewStyle">
        <item name="android:layout_weight">1</item>
        <item name="label_text_color">@color/text_selected</item>
        <item name="value_text_color">@color/black</item>
    </style>

    <style name="salary.LabelValueViewStyle" parent="HLabelValueViewStyle">
        <item name="android:layout_weight">1</item>
        <item name="label_text_width">120dp</item>
        <item name="label_text_color">@color/black</item>
        <item name="value_text_style">bold</item>
        <item name="value_text_color">@color/text_selected</item>
    </style>

    <style name="normal.LabelValueViewStyle" parent="HLabelValueViewStyle">
        <item name="label_text_size">12sp</item>
        <item name="value_text_size">12sp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="billItem.LabelValueViewStyle" parent="HLabelValueViewStyle">
        <item name="label_text_size">12sp</item>
        <item name="label_text_color">@color/black</item>
        <item name="value_text_size">12sp</item>
        <item name="value_text_color">@color/black</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="SubSystemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="SubSystemLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/margin_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ItemLabel.LabelValueViewStyle" parent="HLabelValueViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="label_text_color">@color/black</item>
        <item name="value_text_gravity">left</item>
        <item name="value_text_color">@color/gray</item>
        <item name="label_text_size">@dimen/text_size_small</item>
        <item name="value_text_size">@dimen/text_size_small</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="ItemLabelButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">@dimen/margin_smallest</item>
        <item name="android:paddingRight">@dimen/margin_smallest</item>
        <item name="android:paddingLeft">@dimen/margin_smallest</item>
        <item name="label_text_height">20dp</item>
        <item name="label_text_corner_radius">@dimen/radius_normal</item>
        <item name="label_text_gravity">center</item>
        <item name="label_text_size">@dimen/text_size_small</item>
    </style>

    <style name="ListLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_smallest</item>
        <item name="android:background">@drawable/shape_textview_corner</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">@dimen/margin_smallest</item>
        <item name="android:paddingLeft">@dimen/margin_smallest</item>
    </style>

    <style name="LinePortal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/dark_gray</item>
    </style>

    <style name="LightGrayLinePortal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="LineVertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="ProfileItemStyle">
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height_large</item>
        <item name="android:drawablePadding">@dimen/margin_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_normal</item>
    </style>

    <style name="RightArrow.ProfileItemStyle" parent="ProfileItemStyle">
        <item name="android:drawableRight">@mipmap/ic_arrow_right</item>
    </style>

    <style name="ExtendLabelValueStyle.ProfileItemStyle" parent="ProfileItemStyle">
        <item name="label_text_size">@dimen/text_size_normal</item>
        <item name="value_text_size">@dimen/text_size_small</item>
        <item name="middle_text_size">@dimen/text_size_normal</item>
        <item name="label_text_color">@color/black</item>
        <item name="value_text_color">@color/black</item>
        <item name="middle_text_color">@color/black</item>
        <item name="edit_text_visibility">GONE</item>
        <item name="middle_text_visibility">GONE</item>
        <item name="right_image_src">@mipmap/ic_arrow_right</item>
        <item name="right_image_width">25dp</item>
        <item name="right_image_height">25dp</item>
        <item name="android:paddingRight">@dimen/margin_small</item>
    </style>

    <style name="CircleStyle">
        <item name="civ_background_stroke_width">0dp</item>
        <item name="civ_background_color">@color/transparent</item>
        <item name="civ_background_stroke_color">@color/transparent</item>
        <item name="civ_circle_background_color">@color/transparent</item>
    </style>

    <style name="PointItemStyle">
        <item name="label_text_size">12sp</item>
        <item name="value_text_size">12sp</item>
        <item name="label_text_width">80dp</item>
        <item name="android:background">@color/bg_white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="label_text_gravity">left</item>
        <item name="value_text_gravity">right</item>
        <item name="label_text_color">@color/light_black</item>
        <item name="value_text_color">@color/black</item>
        <item name="left_image_src">@drawable/shape_oval_light_blue</item>
    </style>

    <style name="PageItemTitleStyle">
        <item name="android:layout_marginTop">@dimen/margin_smallest</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingRight">@dimen/margin_small</item>
        <item name="label_text_gravity">left</item>
        <item name="label_text_size">@dimen/text_size_large</item>
        <item name="label_text_weight">0</item>
        <item name="left_image_height">25dp</item>
        <item name="left_image_scale_type">fitXY</item>
    </style>

    <style name="More.PageItemTitleStyle" parent="PageItemTitleStyle">
        <item name="android:paddingTop">10dp</item>
        <item name="middle_text_color">@color/red</item>
        <item name="middle_text_gravity">left</item>
        <item name="middle_text_size">@dimen/text_size_large</item>
        <item name="middle_text_weight">0</item>
        <item name="value_text_color">@color/primary_blue</item>
        <item name="value_text_gravity">right</item>
        <item name="value_text_size">@dimen/text_size_large</item>
    </style>

    <style name="Blue.PageItemTitleStyle" parent="PageItemTitleStyle">
        <item name="label_text_color">@color/text_selected</item>
    </style>

    <style name="Password.TextInputLayoutStyle" parent="TextInputLayoutStyle">
        <item name="hintEnabled">false</item>
        <item name="passwordToggleDrawable">@drawable/selector_password_switch</item>
        <item name="passwordToggleTint">@drawable/selector_password_switch_color</item>
        <item name="passwordToggleEnabled">true</item>
    </style>

    <style name="StaffPhoto">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/margin_small</item>
    </style>

    <style name="ExtendLabelViewTextStyle">
        <item name="android:background">@color/bg_white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="label_text_gravity">left</item>
        <item name="value_text_gravity">right</item>
        <item name="label_text_color">@color/light_black</item>
        <item name="value_text_color">@color/light_black</item>
    </style>

    <style name="BlueBorderButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_smallest</item>
        <item name="android:background">@drawable/bg_button_border_blue</item>
        <item name="android:textColor">@color/color_text_blue</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="RedBorderButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_smallest</item>
        <item name="android:background">@drawable/bg_button_border_red</item>
        <item name="android:textColor">@color/color_text_red</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/background_white</item>
        <item name="tabIndicatorColor">@color/text_selected</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@color/text_selected</item>
        <item name="tabTextColor">@color/black</item>
    </style>

    <style name="Statistical.ExtendLabelViewTextStyle" parent="ExtendLabelViewTextStyle">
        <item name="label_text_size">@dimen/text_size_small</item>
        <item name="value_text_size">@dimen/text_size_small</item>
        <item name="android:paddingTop">@dimen/margin_smallest</item>
        <item name="android:paddingBottom">@dimen/margin_smallest</item>
    </style>

    <style name="Image.StatisticalExtendLabelViewTextStyle" parent="Statistical.ExtendLabelViewTextStyle">
        <item name="right_image_src">@mipmap/ic_arrow_right</item>
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
        <item name="android:layout_marginRight">@dimen/margin_normal</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="DropdownLabel">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:drawableRight">@mipmap/ic_dropdown_normal</item>
        <item name="android:paddingRight">@dimen/margin_small</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ListViewStyle">
        <item name="android:cacheColorHint">@null</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:scrollbarThumbVertical">@color/dark_gray</item>
        <item name="android:scrollbarSize">2dp</item>
    </style>

    <style name="PageItemListStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/bg_white</item>
        <item name="android:paddingLeft">@dimen/margin_small</item>
        <item name="android:paddingTop">@dimen/margin_smallest</item>
        <item name="android:paddingBottom">@dimen/margin_smallest</item>
        <item name="edit_text_visibility">GONE</item>
        <item name="middle_text_weight">1</item>
        <item name="label_text_size">@dimen/text_size_normal</item>
        <item name="label_text_color">@color/black</item>
        <item name="left_image_height">30dp</item>
        <item name="left_image_width">40dp</item>
        <item name="right_image_height">15dp</item>
        <item name="right_image_width">30dp</item>
        <item name="right_image_src">@mipmap/ic_nav_right_gary_small</item>
        <item name="value_text_color">@color/gray</item>
        <item name="value_text_size">@dimen/text_size_normal</item>
        <item name="value_text_gravity">right</item>
    </style>

    <style name="OrderDetailItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/margin_smallest</item>
        <item name="android:paddingBottom">@dimen/margin_smallest</item>
        <item name="android:layout_marginLeft">@dimen/margin_largest</item>
        <item name="android:layout_marginRight">@dimen/margin_largest</item>
        <item name="label_text_color">@color/black</item>
        <item name="label_text_size">@dimen/text_size_normal</item>
        <item name="value_text_weight">1</item>
        <item name="value_text_gravity">right</item>
        <item name="value_text_color">@color/text_selected</item>
        <item name="value_text_size">@dimen/text_size_large</item>
    </style>

    <style name="OrderDetailItemStyle2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_largest</item>
        <item name="android:layout_marginRight">@dimen/margin_normal</item>
        <item name="label_text_color">@color/black</item>
        <item name="label_text_size">@dimen/text_size_normal</item>
        <item name="value_text_gravity">right</item>
        <item name="value_text_color">@color/text_gray</item>
        <item name="value_text_size">@dimen/text_size_normal</item>
        <item name="middle_text_weight">1</item>
        <item name="edit_text_visibility">GONE</item>
    </style>

</resources>
